<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="warn" name="MyApp" packages="">
	<Appenders>
		<RollingFile name="error" fileName="${sys:user.dir}/target/logs/error.log"
			filePattern="${sys:user.dir}/target/logs/simpapp/error-%d{MM-dd-yyyy}-%i.log.zip">
			<PatternLayout
				pattern="%-d{yyyy-MM-dd HH:mm:ss.SSS} %level{length=1} [%c{3}:%L] - [%t] %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<RollingFile name="info" fileName="${sys:user.dir}/target/logs/info.log"
			filePattern="${sys:user.dir}/target/logs/simpapp/info-%d{MM-dd-yyyy}-%i.log.zip">
			<PatternLayout
				pattern="%-d{yyyy-MM-dd HH:mm:ss.SSS} %level{length=1} [%c{3}:%L] - [%t] %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<RollingFile name="debug" fileName="${sys:user.dir}/target/logs/debug.log"
			filePattern="${sys:user.dir}/target/logs/simpapp/debug-%d{MM-dd-yyyy}-%i.log.zip">
			<PatternLayout
				pattern="%-d{yyyy-MM-dd HH:mm:ss.SSS} %level{length=1} [%c{3}:%L] - [%t] %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<Console name="STDOUT" target="SYSTEM_OUT" ignoreExceptions="false">
			<PatternLayout
				pattern="%-d{yyyy-MM-dd HH:mm:ss.SSS} %level{length=1} [%c{3}:%L] - [%t] %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="debug" level="debug" />
			<AppenderRef ref="STDOUT" level="info" />
			<AppenderRef ref="error" level="error" />
		</Root>
		<Logger name="log4j.logger.org.hibernate.type" level="trace" />
        <Logger name="log4j.logger.org.hibernate.SQL" level="trace" />
	</Loggers>
</Configuration>

